---
import Layout from "../layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

import { Image } from 'astro:assets';
import lostImage from "../../public/images/lost.gif";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang)
---
<Layout title="404">
    <div class="flex flex-col items-center h-screen">
    <h1 class="text-3xl font-bold mt-20">{t("404.title")}</h1>
    <Image src={lostImage} alt="descriptive text" class="mt-20"/>
    <a href={"/"+lang} class="text-slate-200 bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mt-20">
        <span>{t("404.button")}</span>
    </a>
    </div>
</Layout