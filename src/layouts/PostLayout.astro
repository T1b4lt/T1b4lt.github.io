---
import Layout from "./Layout.astro";

import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { frontmatter } = Astro.props;
const subtitle =
  t("post.by") +
  " " +
  frontmatter.author +
  " " +
  t("post.on") +
  " " +
  frontmatter.pubDate;
---

<Layout title={`${frontmatter.title} | T1b4lt`}>
  <style is:global>
    .post-content h1 {
      @apply text-4xl font-bold;
    }
    .post-content h2 {
      @apply text-3xl font-bold;
    }
    .post-content h3 {
      @apply text-2xl font-bold;
    }
    .post-content h4 {
      @apply text-xl font-bold;
    }
    .post-content h5 {
      @apply text-lg font-bold;
    }
    .post-content h6 {
      @apply text-base font-bold;
    }
    .post-content p {
      @apply text-base;
    }
    .post-content ul {
      @apply list-disc list-inside;
    }
    .post-content ol {
      @apply list-decimal list-inside;
    }
    .post-content li {
      @apply text-base;
    }
    .post-content a {
      @apply underline decoration-[#3E78B2] decoration-2;
    }
    .post-content a:hover {
      @apply text-[#3E78B2];
    }
    .post-content blockquote {
      @apply border-l-4 border-gray-400 pl-4;
    }
    .post-content blockquote p {
      @apply text-base;
    }
    .post-content pre {
      @apply overflow-x-auto rounded p-4;
    }
    .post-content code {
      @apply text-base;
    }
    .post-content table {
      @apply w-full border-collapse;
    }
    .post-content table th {
      @apply text-base font-bold border border-gray-400 p-2;
    }
    .post-content table td {
      @apply text-base border border-gray-400 p-2;
    }
    .post-content img {
      @apply mx-auto;
    }
    .post-content hr {
      @apply border-gray-600 dark:border-slate-200 my-4;
    }
    .post-content mark {
      @apply bg-[#D0E562];
    }
  </style>
  <div class="flex justify-center p-10">
    <div class="w-full lg:w-1/2 text-lg">
      <h1 class="text-4xl font-bold">{frontmatter.title}</h1>
      <h2 class="text-base font-light">{subtitle}</h2>
      <hr class="border-gray-600 dark:border-slate-200 border-2 my-4" />
      <div class="post-content space-y-5">
        <slot />
      </div>
    </div>
  </div>
</Layout>
