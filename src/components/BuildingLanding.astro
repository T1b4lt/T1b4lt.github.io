---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="flex flex-col justify-center h-screen text-center">
  <h1 class="text-6xl font-bold">{title}</h1>
  <div class="pt-10">
    <a
      href="https://github.com/t1b4lt"
      class="inline-block px-7 py-2 rounded text-s font-medium leading-8 text-center bg-gradient-to-tr from-teal-500 to-blue-500"
    >
      <i class="fa-brands fa-github pr-2"></i>
      <span>T1b4lt</span>
    </a>
  </div>
</div>
